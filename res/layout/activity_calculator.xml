 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalculatorActivity">
         <Button
            android:id="@+id/B1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/B4"
            android:layout_alignRight="@+id/B4"
            android:layout_marginTop="200dp"
            android:layout_marginRight="0dp"
            android:text="1" />

        <Button
            android:id="@+id/B2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/B1"
            android:layout_toLeftOf="@+id/B3"
            android:layout_toStartOf="@+id/B3"
            android:text="2" />

        <Button
            android:id="@+id/B3"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/B2"
            android:layout_centerHorizontal="true"
            android:text="3" />

        <Button
            android:id="@+id/B4"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B1"
            android:layout_toLeftOf="@+id/B2"
            android:text="4" />

        <Button
            android:id="@+id/B5"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/B4"
            android:layout_alignLeft="@+id/B2"
            android:layout_alignStart="@+id/B2"
            android:text="5" />

        <Button
            android:id="@+id/B6"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/B3"
            android:layout_alignStart="@+id/B3"
            android:layout_below="@+id/B3"
            android:text="6" />

        <Button
            android:id="@+id/B7"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B4"
            android:layout_toLeftOf="@+id/B2"
            android:text="7" />

        <Button
            android:id="@+id/B8"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/B5"
            android:layout_alignStart="@+id/B5"
            android:layout_below="@+id/B5"
            android:text="8" />

        <Button
            android:id="@+id/B9"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/B6"
            android:layout_alignStart="@+id/B6"
            android:layout_below="@+id/B6"
            android:text="9" />

        <Button
            android:id="@+id/Badd"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/B3"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/B3"
            android:text="+" />

        <Button
            android:id="@+id/Bsub"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Badd"
            android:layout_alignStart="@+id/Badd"
            android:layout_alignLeft="@+id/Badd"
            android:layout_alignEnd="@+id/Badd"
            android:layout_alignRight="@+id/Badd"
            android:text="-" />

        <Button
            android:id="@+id/Bmul"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Bsub"
            android:layout_alignStart="@+id/Bsub"
            android:layout_alignLeft="@+id/Bsub"
            android:layout_alignEnd="@+id/Bsub"
            android:layout_alignRight="@+id/Bsub"
            android:text="*" />

        <Button
            android:id="@+id/Bpoint"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B7"
            android:layout_toLeftOf="@+id/B2"
            android:text="." />

        <Button
            android:id="@+id/B0"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/B8"
            android:layout_alignStart="@+id/B8"
            android:layout_below="@+id/B8"
            android:text="0" />

        <Button
            android:id="@+id/Bdel"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B9"
            android:layout_alignStart="@+id/B9"
            android:layout_alignLeft="@+id/B9"
            android:text="DEL" />

        <Button
            android:id="@+id/Bdiv"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Bmul"
            android:layout_alignStart="@+id/Bmul"
            android:layout_alignLeft="@+id/Bmul"
            android:layout_alignEnd="@+id/Bmul"
            android:layout_alignRight="@+id/Bmul"
            android:text="/" />

        <Button
            android:id="@+id/Beq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/B0"
            android:layout_alignStart="@+id/Bpoint"
            android:layout_alignLeft="@+id/Bpoint"
            android:layout_alignEnd="@+id/Bdiv"
            android:layout_alignRight="@+id/Bdiv"
            android:layout_marginTop="37dp"
            android:text="=" />

        <TextView
            android:id="@+id/Tresult"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/B1"
            android:layout_marginTop="49dp" />

         <TextView
             android:id="@+id/Tcompute"
             android:layout_width="84dp"
             android:layout_height="wrap_content"
             android:layout_alignEnd="@id/Badd"
             android:layout_marginStart="126dp"
             android:layout_marginTop="49dp" />
 </RelativeLayout>
